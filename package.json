{
  "name": "scss-to-css-compile",
  "displayName": "scss to css",
  "description": "ðŸ’  Compile SCSS files easily to css and minified version.",
  "version": "1.3.1",
  "publisher": "oorzc",
  "author": "oorzc",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.63.0"
  },
  "categories": [
    "Formatters"
  ],
  "activationEvents": [
    "onLanguage:css",
    "onLanguage:scss"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "scss-to-css-compile.compile",
        "title": "Compile The SCSS file..."
      },
      {
        "command": "scss-to-css-compile.css-to-scss",
        "title": "Compile The CSS file to SCSS"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "!inOutput && resourceExtname =~ /\\.scss$/",
          "command": "scss-to-css-compile.compile",
          "title": "Compile The SCSS file..."
        },
        {
          "when": "!inOutput && resourceExtname =~ /\\.(css)$/",
          "command": "scss-to-css-compile.css-to-scss",
          "title": "Compile The CSS file to SCSS"
        }
      ]
    },
    "keybindings": [
      {
        "command": "scss-to-css-compile.compile",
        "key": "cmd+shift+c"
      },
      {
        "command": "scss-to-css-compile.css-to-scss",
        "key": "cmd+shift+s"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Scss Compiler Configuration",
      "properties": {
        "scss-to-css-compile.compileOnSave": {
          "type": "boolean",
          "default": true,
          "description": "Auto compile on Save"
        },
        "scss-to-css-compile.showButtons": {
          "type": "boolean",
          "default": true,
          "description": "Show Buttons in the status bar"
        },
        "scss-to-css-compile.output": {
          "type": "string",
          "default": "expanded | compressed",
          "description": "Compressed: Generates only .css file\nExpanded: Generates only .min.css\nExpanded | Compressed: Generates both."
        },
        "scss-to-css-compile.outDir": {
          "type": "string",
          "default": "./dist",
          "description": "support ./dist  or ../dist or /dist"
        },
        "scss-to-css-compile.autoPrefixer": {
          "type": "boolean",
          "default": false,
          "description": "Auto prefixer"
        },
        "scss-to-css-compile.browsers": {
          "type": "array",
          "default": [
            "ie > 9",
            "iOS > 8",
            "Android >= 4.4",
            "ff > 38",
            "Chrome > 38"
          ],
          "description": "Browsers to support"
        }
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/oorzc/ScssToCss.git"
  },
  "keywords": [
    "css",
    "scss",
    "sass",
    "sass to css",
    "scss to css",
    "sass2css",
    "scss2css",
    "compile"
  ],
  "scripts": {
    "vscode:prepublish": "npm run package && git add . && git commit -m 'up' && git push",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "major": "vsce publish major",
    "minor": "vsce publish minor",
    "patch": "vsce publish patch"
  },
  "devDependencies": {
    "@types/glob": "^7.1.4",
    "@types/mocha": "^9.0.0",
    "@types/node": "14.x",
    "@types/vscode": "^1.63.0",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "@vscode/test-electron": "^1.6.2",
    "autoprefixer": "^10.4.7",
    "color-namer": "^1.4.0",
    "eslint": "^8.1.0",
    "glob": "^7.1.7",
    "iofs": "^1.5.2",
    "lodash": "^4.17.21",
    "mocha": "^9.1.3",
    "perfectionist": "^2.4.0",
    "postcss": "^8.4.14",
    "sass": "^1.45.0",
    "ts-loader": "^9.2.5",
    "typescript": "^4.4.4",
    "webpack": "^5.52.1",
    "webpack-cli": "^4.8.0"
  },
  "dependencies": {}
}

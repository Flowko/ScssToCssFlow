{
  "name": "scss-to-css-flow",
  "displayName": "ScssToCssFlow",
  "description": "ðŸ’  Compile SCSS files easily to css and minified version.",
  "version": "0.6.0",
  "publisher": "flowko",
  "author": "Flowko [@flowko]",
  "icon": "logo.png",
  "engines": {
    "vscode": "^1.77.0"
  },
  "categories": [
    "Formatters"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "scss-to-css-flow.compile",
        "title": "Compile The SCSS file..."
      },
      {
        "command": "scss-to-css-flow.css-to-scss",
        "title": "Compile The CSS file to SCSS"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "!inOutput",
          "command": "scss-to-css-flow.compile",
          "title": "Compile The SCSS file..."
        },
        {
          "when": "!inOutput",
          "command": "scss-to-css-flow.css-to-scss",
          "title": "Compile The CSS file to SCSS"
        }
      ]
    },
    "keybindings": [
      {
        "command": "scss-to-css-flow.compile",
        "key": "cmd+shift+c"
      },
      {
        "command": "scss-to-css-flow.css-to-scss",
        "key": "cmd+shift+s"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Web Compiler Flow Configuration",
      "properties": {
        "scss-to-css-flow.compileOnSave": {
          "type": "boolean",
          "default": true,
          "description": "Auto compile on Save"
        },
        "scss-to-css-flow.showButtons": {
          "type": "boolean",
          "default": true,
          "description": "Show Buttons in the status bar"
        },
        "scss-to-css-flow.output": {
          "type": "string",
          "default": "expanded | compressed",
          "description": "Compressed: Generates only .min.css file\nExpanded: Generates only .css\nExpanded | Compressed: Generates both."
        },
        "scss-to-css-flow.autoPrefixer": {
          "type": "boolean",
          "default": false,
          "description": "Auto prefixer"
        },
        "scss-to-css-flow.browsers": {
          "type": "array",
          "default": [
            "ie > 9",
            "iOS > 8",
            "Android >= 4.4",
            "ff > 38",
            "Chrome > 38"
          ],
          "description": "Browsers to support"
        }
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Flowko/ScssToCssFlow.git"
  },
  "keywords": [
    "css",
    "scss",
    "sass",
    "compile"
  ],
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "18.15.11",
    "@types/vscode": "^1.77.0",
    "@typescript-eslint/eslint-plugin": "^5.58.0",
    "@typescript-eslint/parser": "^5.58.0",
    "@vscode/test-electron": "^2.3.0",
    "autoprefixer": "^10.4.14",
    "color-namer": "^1.4.0",
    "eslint": "^8.38.0",
    "glob": "^10.1.0",
    "iofs": "^1.5.3",
    "lodash": "^4.17.21",
    "mocha": "^10.2.0",
    "perfectionist": "^2.4.0",
    "postcss": "^8.4.22",
    "sass": "^1.62.0",
    "ts-loader": "^9.4.2",
    "typescript": "^5.0.4",
    "webpack": "^5.79.0",
    "webpack-cli": "^5.0.1"
  },
  "dependencies": {}
}
